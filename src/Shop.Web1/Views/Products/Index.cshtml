@model IEnumerable<ProductViewModel>

<div class="row">
    <div class="col-lg-12">
        <a asp-area="" asp-controller="Products" asp-action="Add" class="btn btn-primary">Add product</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1>Products</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="list-group">
            @foreach (var product in Model)
            {
                <a href="#" title="Add to cart" class="list-group-item list-group-item-action">@product.Name [@product.Price PLN]</a>
            }
        </div>
    </div>
</div>

